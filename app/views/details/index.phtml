<!-- JavaScript for handling the update redirect -->
<script>
    function setManagerIdAndRedirect() {
        let managerId = <?= $id ?>;

        if (managerId) {
            // Store ID in cookie for the update page to use
            let date = new Date();
            date.setTime(date.getTime() + (1 * 24 * 60 * 60 * 1000)); // 1 day from now
            let expires = "expires=" + date.toUTCString();
            document.cookie = "activateid=" + managerId + "; " + expires + "; path=/";

            // Redirect to update page
            window.location.href = "/userupdate";
        } else {
            console.error("Profile ID not found!");
            alert("Profile ID not found. Unable to update profile.");
        }
    }
</script>

