    <script>
        function setaccountIdAndRedirect(button) {
            let row = button.closest('.account-row');
            let accountId = row.getAttribute("data-id");
            console.log("account ID:", accountId);
            
            let date = new Date();
            date.setTime(date.getTime() + (24 * 60 * 60 * 1000)); // 1 day from now
            let expires = "expires=" + date.toUTCString();
            document.cookie = "activateid=" + accountId + "; " + expires + "; path=/";
            
            var username = row.getAttribute("data-username");
            document.cookie = "username=" + username + "; " + expires + "; path=/";
            
            window.location.href = "/activate"; 
        }

        function setaccountIdAndDetail(button) {
            var row = button.closest('.account-row');
            var accountId = row.getAttribute("data-id");
            console.log("account ID:", accountId);
            
            let date = new Date();
            date.setTime(date.getTime() + (1 * 24 * 60 * 60 * 1000)); // 1 day from now
            let expires = "expires=" + date.toUTCString();
            document.cookie = "activateid=" + accountId + "; " + expires + "; path=/";
            
            var username = row.getAttribute("data-username");
            document.cookie = "username=" + username + "; " + expires + "; path=/";
            
            window.location.href = "/detailsusers"; 
