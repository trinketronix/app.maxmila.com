<!-- JavaScript -->
<script>
    function setaccountIdAndRedirect(button) {
        // Find the closest parent with class 'user-row'
        const row = button.closest('.user-row');
        if (!row) {
            console.error("No row found for the clicked button.");
            return;
        }

        // Get the account ID from the data attribute
        const accountId = parseInt(row.getAttribute("data-id"));
        if (!accountId) {
            console.error("No account ID found in row.");
            return;
        }

        // Make sure the token is defined
        if (typeof token === 'undefined' || !token) {
            console.error("Authorization token is not defined.");
            alert("Missing authorization token.");
            return;
        }

        // Build API URL
        const apiUrl = baseUrl + '/auth/activate/account';

        // Make the API call
        fetch(apiUrl, {
            method: 'PUT',
            headers: {
                'Authorization': 'Bearer ' + token,
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ id: accountId })
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Success:', data);
                if (data && data.data) {
                    console.log("User activated successfully.");
                    console.log("Managers or related data:", data.data);

                    alert("User activated successfully.");

                    // Update the button visually
                    const updatedRow = document.querySelector(`.user-row[data-id="${accountId}"]`);
                    const btn = updatedRow.querySelector('.btn-action:nth-child(2)');
                    if (btn) {
                        btn.textContent = "Activated";
                        btn.classList.add("disabled");
                        btn.setAttribute("aria-disabled", "true");
                        btn.onclick = () => false;
                    }
                } else {
                    alert("No data returned from activation.");
                }
            })
            .catch(error => {
                console.error('Error:', error);
                console.error('Error during activation:', error);
                alert("An error occurred during the activation." + error.toString());
            });
    }


    function setaccountIdAndDetail(button) {
        let row = button.closest('.user-row');
        let accountId = row.getAttribute("data-id");
        let username = row.getAttribute("data-username");

        if (accountId) {
            let date = new Date();
            date.setTime(date.getTime() + (24 * 60 * 60 * 1000));
            let expires = "expires=" + date.toUTCString();
            document.cookie = "activateid=" + accountId + "; " + expires + "; path=/";
            document.cookie = "username=" + username + "; " + expires + "; path=/";

            window.location.href = "/detailsusers";
        }
    }
</script>

