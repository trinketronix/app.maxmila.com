<!-- JavaScript for location viewing -->
<script>
    // Function to open Google Maps with patient location
    function viewLocation(latitude, longitude) {
        if (latitude && longitude) {
            // Check if device is mobile
            const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

            if (isMobile) {
                // Open in native maps app on mobile
                window.open(`geo:${latitude},${longitude}?q=${latitude},${longitude}`, '_system');

                // Fallback to Google Maps if the geo URI doesn't work
                setTimeout(function() {
                    window.open(`https://www.google.com/maps?q=${latitude},${longitude}`, '_blank');
                }, 500);
            } else {
                // Open Google Maps in browser
                window.open(`https://www.google.com/maps?q=${latitude},${longitude}`, '_blank');
            }
        } else {
            alert('Location information is not available for this address.');
        }
    }
</script>
