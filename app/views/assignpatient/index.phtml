<script>
    function setPatient(button) {
        let row = button.closest('.manager-row');
        let patientId = row.getAttribute("data-patient-id");
        let patientName = row.getAttribute("data-patient-name");

        console.log("Sending:", { patientId, patientName });

        fetch('/assignpatient/setPatient', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({
                patientId: parseInt(patientId),
                patientName: patientName
            })
        })
            .then(async response => {
                const contentType = response.headers.get("Content-Type");
                const text = await response.text();

                if (!response.ok) {
                    throw new Error("Server error: " + response.status + " - " + text);
                }

                if (!contentType.includes("application/json")) {
                    throw new Error("Invalid content type: " + contentType + "\n\nResponse: " + text);
                }

                return JSON.parse(text);
            })
            .then(data => {
                if (data.status === 'ok') {
                    window.location.href = "/confirmassign";
                } else {
                    alert("Error: " + (data.message || "Unknown error"));
                }
            })
            .catch(error => {
                console.error("setPatient error:", error);
                alert("Error communicating with server:\n" + error.message);
            });
    }
</script>

