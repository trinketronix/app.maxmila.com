<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><?= $pageTitle ?? 'Manager Profile' ?></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
    <style>
        .manager-profile {
            border: 1px solid #ccc;
            background-color: #f9f9f9;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .manager-info p {
            margin-bottom: 6px;
            font-weight: 500;
            color: #444;
        }

        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        @media (max-width: 600px) {
            .action-buttons {
                flex-direction: column;
                width: 100%;
            }
        }
    </style>
</head>
<body>
<div class="container py-4">

    <h2 class="text-center mb-4"><?= $pageTitle ?? 'User Profile' ?></h2>

    <!-- Flash Messages -->
    <div class="flash-messages mb-3">
        <?= $this->flashSession->output() ?>
    </div>

    <!-- Manager Profile -->
    <form action="/changerole" method="POST" id="myForm">
        <div class="manager-profile" data-id="<?= $managers['id'] ?>">
            <div class="manager-info">
                <h4 class="mb-3">Profile</h4>
                <p><strong>Username:</strong> <?= htmlspecialchars($managers['username']) ?></p>
                <p><strong>First Name:</strong> <?= htmlspecialchars($managers['firstname']) ?></p>
                <p><strong>Last Name:</strong> <?= htmlspecialchars($managers['lastname']) ?></p>
                <p><strong>Middle Name:</strong> <?= htmlspecialchars($managers['middlename']) ?></p>
                <p><strong>Birthdate:</strong> <?= htmlspecialchars($managers['birthdate']) ?></p>
                <p><strong>Email 1:</strong> <?= htmlspecialchars($managers['email']) ?></p>
                <p><strong>Email 2:</strong> <?= htmlspecialchars($managers['email2']) ?></p>
                <p><strong>Languages:</strong> <?= htmlspecialchars($managers['languages']) ?></p>
                <p><strong>ID:</strong> <?= htmlspecialchars($managers['id']) ?></p>
                <input type="hidden" name="hiddenusername" value="<?= htmlspecialchars($manager['username'] ?? '') ?>">
            </div>
            <div class="action-buttons mt-3">
                <button type="submit" class="btn btn-primary" onclick="setManagerIdAndRole(); return false;">
                    <i class="bi bi-person-check"></i> Role
                </button>
            </div>
        </div>
    </form>

    <!-- Navigation Buttons -->
    <div class="action-buttons mt-4">
        <button type="button" class="btn btn-danger" onclick="window.history.back();">
            <i class="bi bi-arrow-left-circle"></i> Back
        </button>

        <button type="button" class="btn btn-primary" onclick="setManagerIdAndUpdate();">
            <i class="bi bi-pencil-square"></i> Update
        </button>
    </div>

</div>

<!-- Scripts -->
<script>
    function setManagerIdAndUpdate() {
        const managerId = getManagerId();
        if (managerId) {
            const date = new Date();
            date.setTime(date.getTime() + (1 * 24 * 60 * 60 * 1000));
            document.cookie = `activateid=${managerId}; expires=${date.toUTCString()}; path=/`;
            window.location.href = "/userupdate";
        } else {
            console.error("Manager ID not found!");
        }
    }

    function setManagerIdAndRole() {
        const managerId = getManagerId();
        if (managerId) {
            const date = new Date();
            date.setTime(date.getTime() + (1 * 24 * 60 * 60 * 1000));
            document.cookie = `activateid=${managerId}; expires=${date.toUTCString()}; path=/`;
            document.getElementById("myForm").submit();
        } else {
            console.error("Manager ID not found!");
        }
    }

    function getManagerId() {
        const managerRow = document.querySelector('.manager-profile');
        return managerRow ? managerRow.getAttribute("data-id") : null;
    }
</script>

<!-- Bootstrap JS dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
